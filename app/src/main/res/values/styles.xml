<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SciousTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SciousTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="SciousTheme.NoActionBar_StatusBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AppTheme.TransparentActivity">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="SciousTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="SciousTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogDatePickerTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:datePickerStyle">@style/SciousDatePickerStyle</item>

    </style>

    <style name="SciousDatePickerStyle" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="SciousTheme.Widget.ProfileItem" parent="SciousTheme">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="SciousTheme.Widget.ProfileItemContent" parent="SciousTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">22dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SciousTheme.Widget.ProfileItemName" parent="SciousTheme">
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.3</item>
    </style>

    <style name="SciousTheme.Widget.ProfileItemValue" parent="SciousTheme">
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.7</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="SciousTheme.Widget.Divider" parent="SciousTheme">
        <item name="android:background">@color/gray_light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="SciousTheme.Widget.ProfileHeader" parent="SciousTheme">
        <item name="android:background">@color/gray_light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">22dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

</resources>
